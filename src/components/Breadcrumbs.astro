---
interface Props {
  items: {
    label: string;
    href: string;
  }[];
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb">
  <div class="py-4">
    <ol class="flex items-center space-x-4">
      <li>
        <a 
          href="/" 
          class="text-accent hover:text-highlight transition-colors flex items-center group"
          aria-label="Home"
        >
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            class="h-5 w-5 group-hover:scale-110 transition-transform" 
            viewBox="0 0 24 24" 
            fill="none" 
            stroke="currentColor" 
            stroke-width="2" 
            stroke-linecap="round" 
            stroke-linejoin="round"
          >
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9 22 9 12 15 12 15 22"/>
          </svg>
        </a>
      </li>

      {items.map((item, index) => (
        <>
          <li class="text-gray-400">
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              class="h-5 w-5" 
              viewBox="0 0 24 24" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2"
            >
              <polyline points="9 18 15 12 9 6" />
            </svg>
          </li>
          <li>
            {index === items.length - 1 ? (
              <span class="text-gray-300">{item.label}</span>
            ) : (
              <a 
                href={item.href}
                class="text-accent hover:text-highlight transition-colors hover:underline"
              >
                {item.label}
              </a>
            )}
          </li>
        </>
      ))}
    </ol>
  </div>
</nav>